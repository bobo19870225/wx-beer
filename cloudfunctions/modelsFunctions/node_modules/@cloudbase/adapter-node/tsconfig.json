{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "esModuleInterop": true,
    "target": "ES5",
    "moduleResolution": "Node16"
  },
  "include": ["src/**/*.ts", "package.json"],
  "exclude": ["node_modules", "dist"]
}
