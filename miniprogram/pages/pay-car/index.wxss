/* pages/pay-car/index.wxss */
page {
    width: 100%;
}



.tip_text {
    width: 100%;
    height: 400rpx;
    line-height: 400rpx;
    text-align: center;
    color: rgba(0, 0, 0, 0.5);
    font-size: 28rpx;
}



.goods-title {
    font-family: "PingFang SC";
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    text-align: left;
    /* width: 100%; */
}


.goods-price {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 4rpx;
}

.bottom_tips {
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    color: rgba(0, 0, 0, 0.7);
    position: absolute;
    bottom: 100rpx;
    left: 50%;
    transform: translateX(-50%);
}